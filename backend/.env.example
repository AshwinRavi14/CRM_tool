# Backend Environment Variables
PORT=3000
NODE_ENV=production

# MongoDB
MONGODB_URI=your_mongodb_atlas_uri_here

# JWT
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=24h
JWT_COOKIE_EXPIRE=24

# Security
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://your-frontend-url.render.com,http://localhost:5173
FRONTEND_URL=https://your-frontend-url.render.com

# Email (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=
FROM_NAME=
